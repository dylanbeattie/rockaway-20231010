<h1>Bootstrap Grid</h1>
<div class="container">
	@for (var i = 1; i <= 12; i++) {
		<div class="row">
			@for (var col = 0; col <= i; col++) {
				<div class="col">
					div.col
				</div>
			}
		</div>
	}
</div>
<h2>Offset Grids</h2>
<div class="container">
	@for (var o = 1; o < 12; o++) {
		<div class="row">
			<div class="col-@o">div.col-@o</div>
			<div class="col-@(12 - o)">div.col-@(12 - o)</div>
		</div>
	}
</div>
