<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@(ViewData["Title"] ?? "Rockaway")</title>
	<link rel="stylesheet" href="~/css/frontend.css" asp-append-version="true" />
	@await RenderSectionAsync("Head", required: false)
</head>
<body class="container">
	<header>
		<h1>
			<a asp-page="/Index">Rockaway</a>
		</h1>
		<label id="nav-toggle" for="nav-checkbox"><i class="fa-solid fa-bars"></i></label>
		<input type="checkbox" id="nav-checkbox" />
		<nav>
			<a asp-action="Index" asp-controller="Artists">Artists</a>
			<a asp-action="Index" asp-controller="Venues">Venues</a>
		</nav>
	</header>
	<main>
		@RenderBody()
	</main>
	<footer>
		<span>
			&copy; 2023 Rockaway
		</span>
		<nav>
			<a asp-page="/about">about us</a>
			<a asp-page="/contact">contact us</a>
			<a asp-page="/privacy">privacy policy</a>
			<a asp-page="/terms">terms &amp; conditions</a>
			<a href="/status">system status</a>
		</nav>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>